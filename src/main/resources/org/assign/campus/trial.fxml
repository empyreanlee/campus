<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="460.0" prefWidth="636.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.assign.campus.studentPageController">
   <children>
      <VBox layoutX="14.0" layoutY="14.0" prefHeight="438.0" prefWidth="611.0">
       <HBox alignment="CENTER" spacing="10">
           <ImageView fx:id="profilePicture" fitHeight="100" fitWidth="100" />
           <VBox alignment="CENTER_LEFT" spacing="5">
               <HBox spacing="5">
                   <Label text="Name: " />
                   <Label fx:id="studentName" />
               </HBox>
               <HBox spacing="5">
                   <Label text="Registration Number: " />
                   <Label fx:id="regNumber" />
               </HBox>
               <HBox spacing="5">
                   <Label text="Email: " />
                   <Label fx:id="mail" />
               </HBox>
           </VBox>
       </HBox>
          <Separator />

          <!-- Academic Details Section -->
          <VBox alignment="CENTER" spacing="10">
              <Label text="Courses" />
              <ListView fx:id="courseList" />
              <Label text="Grades" />
              <TableView fx:id="gradesTable">
                  <!-- Define columns here -->
              </TableView>
          </VBox>

          <Separator />

          <!-- Schedule and Calendar Section -->
          <VBox alignment="CENTER" spacing="10">
              <Label text="Class Schedule" />
              <TableView fx:id="scheduleTable">
                  <!-- Define columns here -->
              </TableView>
              <Label text="Important Dates" />
              <ListView fx:id="importantDatesList" />
          </VBox>

          <Separator />

          <!-- Notifications and Messages Section -->
          <VBox alignment="CENTER" spacing="10">
              <Label text="Notifications" />
              <ListView fx:id="notificationsList" />
              <Label text="Messages" />
              <ListView fx:id="messagesList" />
          </VBox>
      </VBox>
   </children>
</AnchorPane>
